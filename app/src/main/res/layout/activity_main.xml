<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <view
            android:id="@+id/view6"
            class="androidx.appcompat.widget.Toolbar"
            android:layout_width="420dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0px"
            android:background="#FFFFFF" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view4"
            android:layout_width="350dp"
            android:layout_height="185dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:backgroundTint="#42427E"
            app:cardCornerRadius="20dp">


            <TextView
                android:id="@+id/nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Your Name"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/debitcard"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="268dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="A Debit Card"
                android:textColor="@color/white"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/visa"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="315dp"
                android:layout_marginTop="160dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Visa"
                android:textColor="@color/white"
                android:textSize="12sp"

                />



            <TextView
                android:id="@+id/namenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nameuser"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="XXXX XXXX XXXX XXXX"
                android:textColor="@color/white"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/namenumber2"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="45dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="XX/XX"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/balancenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="145dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="$ 0"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button"
            android:layout_width="311dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:backgroundTint="#42427E"
            android:text="Add New Card"
            app:cornerRadius="20dp" />


        <EditText
            android:id="@+id/name2"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/view4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="960px"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Your Name"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ExpCardDate"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/view4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="520dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Your Exp Card Date"
            android:textColor="@color/black"
            android:inputType="date"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/cvvc"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/cvv"
            android:layout_marginTop="520dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-light"
            android:inputType="number"
            android:hint="Your Card CVV"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/number"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/view4"
            android:layout_marginTop="1160px"
            android:ems="10"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-condensed-light"
            android:inputType="text"
            android:hint="Your card number"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/namec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="340dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Name on card"
            android:textColor="@color/black"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/namec2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="418dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Card Number"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view4"
            android:layout_marginTop="492dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Exp Date"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/exp"
            android:layout_marginLeft="227dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="CVV"
            android:textColor="@color/black"
            android:textSize="18sp" />




        <TextView
            android:id="@+id/zag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="@+id/view6"
            android:layout_marginTop="49dp"
            android:text="Add New Card"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:46"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:textColor="@color/black"
            />






    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
